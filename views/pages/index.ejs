<%- include('../partials/header', {req: req}) %>

<section class="hero">
  <div class="hero-overlay"></div>
  <div class="container">
    <div class="hero-content">
      <h1>Experience the Final Frontier</h1>
      <p>
        Stellar Simulations brings the thrill of commanding a spaceship to your
        next event with our mobile bridge simulator. Perfect for birthday
        parties and special occasions throughout Utah.
      </p>
      <div class="hero-buttons">
        <a href="/booking" class="btn btn-accent btn-large"
          >Book Your Adventure</a
        >
        <a href="/about" class="btn btn-large">Learn More</a>
      </div>
    </div>
  </div>
</section>

<section class="features section">
  <div class="container">
    <div class="section-title">
      <h2>Why Choose Stellar Simulations?</h2>
      <p>
        Our mobile spaceship bridge simulator delivers an unforgettable
        experience for events of all kinds.
      </p>
    </div>
    <div class="features-grid">
      <div class="feature-item animate-on-scroll">
        <div class="feature-icon">
          <i class="fas fa-rocket"></i>
        </div>
        <h3>Mobile Experience</h3>
        <p>
          We bring our custom-designed simulator trailer directly to your
          location anywhere in Utah.
        </p>
      </div>
      <div class="feature-item animate-on-scroll">
        <div class="feature-icon">
          <i class="fas fa-users"></i>
        </div>
        <h3>Team Building</h3>
        <p>
          Perfect for corporate events, our simulator promotes teamwork,
          communication, and leadership.
        </p>
      </div>
      <div class="feature-item animate-on-scroll">
        <div class="feature-icon">
          <i class="fas fa-birthday-cake"></i>
        </div>
        <h3>Birthday Parties</h3>
        <p>
          Give your child and their friends an out-of-this-world adventure
          they'll never forget.
        </p>
      </div>
      <div class="feature-item animate-on-scroll">
        <div class="feature-icon">
          <i class="fas fa-gamepad"></i>
        </div>
        <h3>Immersive Technology</h3>
        <p>
          State-of-the-art controls, displays, and sound effects create a truly
          immersive experience.
        </p>
      </div>
    </div>
  </div>
</section>

<section class="cta-section">
  <div class="container">
    <div class="cta-content">
      <h2>Ready to Command Your Own Spaceship?</h2>
      <p>
        Book our spaceship bridge simulator for your next event and embark on an
        unforgettable adventure.
      </p>
      <a href="/booking" class="btn btn-accent btn-large">Book Now</a>
    </div>
  </div>
</section>

<section class="how-it-works section">
  <div class="container">
    <div class="section-title">
      <h2>How It Works</h2>
      <p>
        Booking your spaceship bridge simulator experience is simple and
        straightforward.
      </p>
    </div>
    <div class="steps-container">
      <div class="step animate-on-scroll">
        <div class="step-number">1</div>
        <div class="step-content">
          <h3>Book Your Event</h3>
          <p>
            Choose your preferred date, time, and duration through our online
            booking system.
          </p>
        </div>
      </div>
      <div class="step animate-on-scroll">
        <div class="step-number">2</div>
        <div class="step-content">
          <h3>We Come to You</h3>
          <p>
            Our team arrives at your location with our custom simulator trailer,
            ready for adventure.
          </p>
        </div>
      </div>
      <div class="step animate-on-scroll">
        <div class="step-number">3</div>
        <div class="step-content">
          <h3>Training Session</h3>
          <p>
            Our crew provides a brief training session to familiarize everyone
            with the controls.
          </p>
        </div>
      </div>
      <div class="step animate-on-scroll">
        <div class="step-number">4</div>
        <div class="step-content">
          <h3>Embark on Missions</h3>
          <p>
            Work together to complete exciting space missions and challenges.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<% if (featuredImages && featuredImages.length > 0) { %>
<section class="gallery-preview section">
  <div class="container">
    <div class="section-title">
      <h2>Experience the Adventure</h2>
      <p>Take a peek inside our spaceship bridge simulator.</p>
    </div>
    <div class="gallery-grid">
      <% featuredImages.forEach(function(image) { %>
      <div class="gallery-item animate-on-scroll">
        <img src="<%= image.imageUrl %>" alt="<%= image.title %>" />
        <div class="gallery-overlay">
          <div class="gallery-caption">
            <h4><%= image.title %></h4>
            <p><%= image.description %></p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
    <div class="gallery-more">
      <a href="/gallery" class="btn">View Full Gallery</a>
    </div>
  </div>
</section>
<% } %> <% if (testimonials && testimonials.length > 0) { %>
<section class="testimonials section">
  <div class="container">
    <div class="section-title">
      <h2>What Our Customers Say</h2>
      <p>
        Hear from those who have experienced our spaceship bridge simulator.
      </p>
    </div>
    <div class="testimonial-grid">
      <% testimonials.forEach(function(testimonial) { %>
      <div class="testimonial-item animate-on-scroll">
        <div class="testimonial-content">
          <div class="testimonial-rating">
            <% for (let i = 0; i < testimonial.rating; i++) { %>
            <i class="fas fa-star"></i>
            <% } %> <% for (let i = testimonial.rating; i < 5; i++) { %>
            <i class="far fa-star"></i>
            <% } %>
          </div>
          <p>"<%= testimonial.content %>"</p>
        </div>
        <div class="testimonial-author">
          <h4><%= testimonial.name %></h4>
          <% if (testimonial.eventType) { %>
          <p><%= testimonial.eventType %></p>
          <% } %>
        </div>
      </div>
      <% }); %>
    </div>
    <div class="testimonials-more">
      <a href="/testimonials" class="btn">Read More Testimonials</a>
    </div>
  </div>
</section>
<% } %>

<section class="contact-preview section">
  <div class="container">
    <div class="section-title">
      <h2>Have Questions?</h2>
      <p>
        Our team is ready to help you plan your perfect spaceship adventure.
      </p>
    </div>
    <div class="contact-buttons">
      <a href="/contact" class="btn btn-large">Contact Us</a>
      <a href="tel:+13859859152" class="btn btn-large">(385) 985-9152</a>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
